<form action="{{path('reservation_create')}}" method="post">
    <h1>Réserve des voyages <br> dans l'espace</h1>
    <label>Choisis ta destination : </label>

    <span class="custom-dropdown custom-dropdown--white">
        <select class="custom-dropdown__select custom-dropdown__select--white" name="select_planet">
                <option value="stanton_1">Stanton I - MicroTech</option>
                <option value="stanton_2">Stanton II - Hurston</option>
                <option value="stanton_3">Stanton III - ArcCorp</option>
                <option value="stanton_4">Stanton IV - Crusader</option>
                <option value="terra_1">Terra - Terra</option>
                <option value="terra_2">Terra - Gen</option>
                <option value="terra_3">Terra - Pike</option>
                <option value="terra_4">Terra - Aero</option>
        </select>
    </span>
    <h2>Départ :</h2>
    <input type="date" value="" name="date_aller">
    <h2>Retour :</h2>
    <input type="date" name="date_retour">
    <h2>Voyageurs :</h2>
    <div>
        <input type="hidden" name="voyageur" value="0" id="hidden_input">
        <button type="button" id="low" class="compteur"></button>
        <p id="voyageur">0</p>
        <button type="button" id="high" class="compteur"></button>
    </div>
    <button type="submit" id="search" name="submit">GO !</button>
</form>
